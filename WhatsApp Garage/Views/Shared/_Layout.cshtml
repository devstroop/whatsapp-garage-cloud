<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] @if (ViewData["Title"] != null) { <text>|</text> } @Server.Constants.Configs.AppName</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WhatsApp_Garage.styles.css" asp-append-version="true" />
</head>
<body style="background-image: url(/img/background-min.png); width:100%; height:100%;">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white @*border-bottom*@ box-shadow mb-3">
            @*<div class="container-fluid">*@
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Public" asp-action="Index">
                    <img src="~/img/branding/wag-dark-full-360x.png" height="36">
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        
                    </ul>
                    
                    <ul class="nav navbar-nav pull-right">
                        @if (Context.Session.GetString("_AdminToken") != null)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Admin" asp-action="Index">Admin Dashboard</a>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-dark ms-3" asp-area="" asp-controller="Admin" asp-action="Logout">Logout</a>
                            </li>
                        }
                        else
                        {
                            @if (Context.Session.GetString("_UserToken") != null)
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="User" asp-action="Index">Dashboard</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="User" asp-action="Authentication">Authentication</a>
                                </li>
                            }
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Public" asp-action="Documentation">Documentation</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Public" asp-action="Help">Help</a>
                            </li>
                            @if (Context.Session.GetString("_UserToken") != null)
                            {
                                <li class="nav-item">
                                    <a class="btn btn-dark ms-3" asp-area="" asp-controller="User" asp-action="Logout">Logout</a>
                                </li>
                        
                            }
                            else
                            {
                                <li class="nav-item">
                                    <a class="btn btn-dark ms-3" asp-area="" asp-controller="User" asp-action="Index">Login</a>
                                </li>
                            }
                        }
                    </ul>



                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="@*border-top*@ footer text-muted">
        <div class="container">
            &copy; 2022 - @Server.Constants.Configs.AppName - Unit of <a href="https://devstroop.com" class="link-dark text-decoration-none">Devstroop Technologies</a> @*<a asp-area="" asp-controller="Public" asp-action="Privacy">Privacy</a>*@
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
